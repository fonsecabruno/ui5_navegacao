<mvc:View
    controllerName="ovly.ui5navegacao.controller.Categoria"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>

<Page title="Categories">

    <content>

        <List mode="SingleSelectMaster" itemPress="onItemPress" items="{path: '/Categories' }">

            <items>

                <StandardListItem type="Active"

                    title="{path: 'ID', type: 'sap.ui.model.odata.type.Int32', formatOptions: { pattern: '0000'} }"/>

            </items>

        </List>

    </content>

    <footer>

        <Toolbar>

            <content>

                <ToolbarSpacer/>

                <Button icon="sap-icon://add" press="onAdd"/>

            </content>

        </Toolbar>

    </footer>

</Page>

	
</mvc:View>
